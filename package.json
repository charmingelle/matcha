{
  "name": "test",
  "version": "1.0.0",
  "description": "## Getting Started",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "client": "cd client && npm start",
    "server_dev": "export MATCHA_MOD=dev && nodemon server/server.js",
    "server": "node server/server.js",
    "dev": "concurrently 'npm run client' 'npm run server_dev'",
    "create_db": "./create_db.sh",
    "initiate_db": "npm run create_db && node server/db.js",
    "initiate_client": "(cd client && npm run initiate && npm run build)",
    "initiate": "npm run initiate_client && npm --loglevel=error i concurrently express pg-promise client-sessions pg-format express-validator random-hash sendmail socket.io bcrypt@2",
    "start": "npm run initiate && npm run initiate_db && npm run server",
    "pg_start": "pg_ctl -D /usr/local/var/postgres start",
    "pg_stop": "pg_ctl -D /usr/local/var/postgres stop"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/charmingelle/matcha.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/charmingelle/matcha/issues"
  },
  "homepage": "https://github.com/charmingelle/matcha#readme",
  "dependencies": {
    "bcrypt": "^2.0.1",
    "client-sessions": "^0.8.0",
    "concurrently": "^4.1.0",
    "express": "^4.17.1",
    "express-validator": "^5.3.1",
    "ip": "^1.1.5",
    "nodemon": "^1.18.9",
    "pg-format": "^1.0.4",
    "pg-promise": "^8.7.2",
    "random-hash": "^4.0.1",
    "sendmail": "^1.4.1",
    "socket.io": "^2.2.0"
  }
}
